root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 150

[*.kt]
indent_style = space
indent_size = 4

ktlint_code_style = intellij_idea
ktlint_standard_filename=disabled
ktlint_standard_argument-list-wrapping=disabled
ktlint_standard_annotation=disabled
ktlint_standard_discouraged-comment-location=disabled
ktlint_standard_function-signature=disabled

ij_continuation_indent_size = 4
ij_kotlin_name_count_to_use_star_import = 50
ij_kotlin_name_count_to_use_star_import_for_members = 50
ij_java_use_single_class_imports = true
ij_kotlin_import_nested_classes = true
ij_any_blank_lines_before_imports = 1
ij_any_blank_lines_after_imports = 1
ij_any_blank_lines_after_package = 1
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[{*Test.kt,*IT.kt}]
max_line_length = 170
